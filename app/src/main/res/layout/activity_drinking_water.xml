<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#7FFFFF"
tools:context=".DrinkingWater"
android:focusable="true"
android:focusableInTouchMode="true">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF7F00"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:text="MIXING VACCINES IN DRINKING WATER"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/primary_lightest"
                android:textSize="22sp"
                android:textStyle="bold"
               />

            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:text="@string/drinking"
                android:textAlignment="center"
                android:textColor="@color/primary_lightest"
                android:textSize="20sp"
                android:textStyle="italic"
                />

            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:text="@string/drinkinginstr"
                android:textAlignment="center"
                android:textColor="@color/primary_lightest"
                android:textSize="20sp"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="49dp"
                android:text="@string/drinkingadv"
                android:textAlignment="center"
                android:textColor="@color/primary_lightest"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/accent"
                android:text="Watch video guide"
                android:textColor="#fff"
                android:textStyle="italic"
                android:enabled="false"/>

            <Button
                android:id="@+id/btnhomu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="back to home"
                android:textColor="#fff"
                android:textStyle="italic"
                android:layout_marginBottom="19dp"/>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>


</RelativeLayout>